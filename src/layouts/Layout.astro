---
//font
import '@fontsource/zen-kaku-gothic-new/300.css';
import '@fontsource/zen-kaku-gothic-new/400.css';
import '@fontsource/zen-kaku-gothic-new/500.css';
import '@fontsource/zen-kaku-gothic-new/700.css';
import '@fontsource/kanit/300.css';
import '@fontsource/kanit/500.css';
import '@fontsource/kanit/700.css';

//common css
import '../scss/foundation/reset.scss'
import '../scss/foundation/base.scss'
import '../scss/foundation/layout.scss'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
		<meta name="description" content="<%= meta.description %>">
		<meta name="keywords" content="">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-pc"></div>
		<div class="main__wrapper">
			<header>
				<div class="global__menu">
					<div id="js-open-toggle" class="open__toggle">
						<span class="border"></span>
						<span class="border"></span>
						<span class="border"></span>
					</div>
					<div class="menu__container">
						<div class="menu__wrap">
							<div id="js-close-toggle" class="close__toggle">
							<span class="border"></span>
							<span class="border"></span>
							</div>
							<nav class="inner">
								<ul>
									<li><a href="/">home</a></li>
									<li><a href="page-a">page a</a></li>
									<li><a href="page-b">page b</a></li>
								</ul>
							</nav>
						</div>
					</div>
				</div>
			</header>
			<slot />
			<footer class="l-bg-white">
				<small>&copy;2023 MIE SUZUKI developed by üê£</small>
			</footer>
		</div>
	</body>
</html>
<style lang="scss">
	@use "../scss/foundation/rem" as r;

	.bg-pc {
		position: fixed;
		width: 100%;
		height: 100vh;
		background: url('../images/hero-bg.jpg') no-repeat;
		background-position: center;
		background-size: cover;
		z-index: -1;
	}
	.main__wrapper {
		position: relative;
		@media (min-width: 980px) {
			width: 375px;
			box-shadow: 0 5px 60px #9e9c8999;
			margin: 0 auto;
		}
	}
	header {
		.open__toggle {
			position: absolute;
			top: 0.5rem;
			right: 0.5rem;
			width: 45px;
			height: 45px;
			background-color: var(--color-blue-dark);
			border-radius: 50%;
			cursor: pointer;
			.border {
				display: inline-block;
				position: absolute;
				top: 50%;
				left: 50%;
				width: 33%;
				height: 2px;
				background-color: var(--color-black);
				&:nth-child(1) {
					transform: translate(-50%, -5px);
				}
				&:nth-child(2) {
					transform: translate(-50%, -1px);
				}
				&:nth-child(3) {
					transform: translate(-50%, 3px);
				}
			}
		}
		.menu__container {
			position: fixed;
			top: 0;
			left: 0;
			display: grid;
			place-content: center;
			width: 100%;
			height: 100%;
			background-color: rgba(#000000, 0.8);
			visibility: hidden;
			opacity: 0;
			pointer-events: none;
			z-index: -1;
			.menu__wrap {
				position: relative;
				display: flex;
				justify-content: flex-start;
				align-items: center;
				flex-direction: column;
				flex-wrap: nowrap;
				width: 300px;
				max-width: calc(100% - 40px);
				height: auto;
				background-color: var(--color-blue-dark);
				border-radius: 12px;
				color: var(--color-white);
				margin: 20px;
				padding: 56px 0px 56px 0px;
				opacity: 0;
				transform: translateY(100px);
				transition: .3s cubic-bezier(.4,.4,0,1);
				.close__toggle {
					position: absolute;
					top: 1rem;
					right: 1rem;
					width: 32px;
					height: 32px;
					cursor: pointer;
					.border {
						display: inline-block;
						position: absolute;
						top: 50%;
						left: 50%;
						width: 100%;
						height: 4px;
						background-color: var(--color-white);
						&:nth-child(1) {
							transform: translate(-50%, -1px) rotate(45deg);
						}
						&:nth-child(2) {
							transform: translate(-50%, -1px) rotate(-45deg);
						}
					}
				}
				.inner {
					width: 100%;
					height: 100%;
					li {
						font-family: var(--font-en);
						font-size: 32px;
						text-transform: uppercase;
						text-align: center;
						line-height: 2;
						a {
							color: var(--color-white);
						}
					}
				}
			}
			&.is__open {
				visibility: visible;
				opacity: 1;
				pointer-events: all;
				z-index: 5;
				.menu__wrap {
					opacity: 1;
					transform: translateY(0);
				}
			}
		}
	}
	footer {
		font-family: var(--font-en);
		font-size: r.f-rem(10);
		font-weight: 300;
		text-align: left;
		padding: 0.5rem 1rem;
	}
</style>

<script>
	// Add target and rel to external links
	const domain = document.domain;
	const regexp = new RegExp(domain);
	const links = document.getElementsByTagName('a');
	for(let link of links) {
		if(!regexp.test(link.href)) {
			if(link.href.match(/^https:\/\//) || link.href.match(/^http:\/\//)) {
				link.setAttribute('target', '_blank');
				link.setAttribute('rel', 'noopener');
			}
		}else if(link.href.match(/\.pdf/)) {
			link.setAttribute('target', '_blank');
			link.setAttribute('rel', 'noopener');
		}
	}

	// global menu
	const openBtn = document.getElementById('js-open-toggle');
	const closeBtn = document.getElementById('js-close-toggle');
	const menuContainer = document.querySelector('.menu__container');
	const body = document.querySelector('body');
	openBtn.addEventListener('click', () => {
		menuContainer.classList.add('is__open');
		body.classList.add('is__open');
	});
	closeBtn.addEventListener('click', () => {
		menuContainer.classList.remove('is__open');
		body.classList.remove('is__open');
	});

	// Lenis Scroll
	import Lenis from '@studio-freight/lenis'
	const lenis = new Lenis({
		duration: 2,
		easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t))
	});

	function raf(time) {
		lenis.raf(time);
		requestAnimationFrame(raf);
	}

	requestAnimationFrame(raf);
</script>