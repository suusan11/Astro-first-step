import news3 from '../../images/news/news03.jpg';

const metas = {
	title: "NEWS",
	discription: "CMSのページ🍓",
	dir: '/news',
    path: '../'
}

const newsCards = [
    {
        href: "news/single",
        thumbnail: news1,
        alt: "ダミー画像",
        date: "2023/09/30",
        title: "ダミータイトル",
        excerpt: "ダミーテキストダミーテキストダミーテキストダミーテキストダミーテキスト",
    },
    {
        href: "news/single",
        thumbnail: news2,
        alt: "ダミー画像",
        date: "2023/09/30",
        title: "ダミータイトル",
        excerpt: "ダミーテキストダミーテキストダミーテキストダミーテキストダミーテキスト",
    },
    {
        href: "news/single",
        thumbnail: news3,
        alt: "ダミー画像",
        date: "2023/09/30",
        title: "ダミータイトル",
        excerpt: "ダミーテキストダミーテキストダミーテキストダミーテキストダミーテキスト",
    }
];
---
<Layout title={metas.title} description={metas.discription}, dir={metas.dir}, path={metas.path}, menuBgBlue={false}>
    <section class="l-second-page l-bg-blue">
        <div class="l-container">
            <PageTitle text="お知らせ" isWhite={true} />
            {newsCards.map(card => (
                <NewsCard {...card} />
            ))}
        </div>
    </section>
</Layout>