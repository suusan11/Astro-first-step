---
interface Props {
	text: string;
}

const { text } = Astro.props;
---

<h1 class="page-title">{ text }</h1>

<style lang="scss" is:global>
    @use "../scss/foundation/rem" as r;

    .page-title {
        text-align: left;
        font-size: r.f-rem(32);
        font-weight: 700;
        padding-bottom: 2rem;
    }
</style>