---
interface Props {
    type: "submit" | "reset" | "button";
	text: string,
}

const { type, text } = Astro.props;
---

<button class="form__button" type={type}><span class="button__text">{text}</span></button>
<!-- <button class="form__button g-recaptcha" data-sitekey="{reCAPTCHA(v3)用サイトキーがここに}" data-callback="onSubmit" data-action="submit" type={type}><span class="button__text">{text}</span></button> -->

<style lang="scss" is:global>
    @use "../scss/foundation/rem" as r;
    .form__button {
        display: block;
		width: 80%;
		border-radius: 15px;
		border: 2px solid var(--color-black);
        font-family: var(--font-jp);
		font-size: r.f-rem(18);
		font-weight: 500;
		text-align: center;
		padding: 0.5rem 0;
		margin: 0 auto;
        cursor: pointer;
		&[type="submit"] {
            background-color: var(--color-orange);
		}
		&[type="button"] {
            background-color: var(--color-blue-light);
            margin-top: 1rem;
		}
		@media (any-hover: hover) {
			&:hover {
				.button__char {
					animation: char-blink .13s linear;
					animation-iteration-count: 2;
				}
			}
		}
    }
</style>